# MinouChat Configuration
# Create a copy of this file named ".env" and update the values
# IMPORTANT: Never commit your .env file to version control!

# ============================================================
# Server Configuration
# ============================================================
PORT=8080
DEBUG=False
ENVIRONMENT=development  # Set to "production" for production deployments

# ============================================================
# Security Configuration (REQUIRED for production)
# ============================================================
# Session secret key - generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=change_this_to_a_64_char_hex_string_in_production

# CORS allowed origins - comma-separated list
# Example: https://minou.example.com,https://www.minou.example.com
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ============================================================
# Clerk Authentication (Required)
# ============================================================
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# ============================================================
# LLM Provider Configuration
# ============================================================
# Choose ONE provider: openai, anthropic, ollama
LLM_PROVIDER=openai

# ============================================================
# OpenAI Configuration
# ============================================================
# Uncomment and fill in if using OpenAI
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MODEL=gpt-4  # More powerful but more expensive

# ============================================================
# Anthropic Configuration
# ============================================================
# Uncomment and fill in if using Anthropic
# ANTHROPIC_API_KEY=your_api_key_here
# ANTHROPIC_MODEL=claude-instant-1
# ANTHROPIC_MODEL=claude-3-opus-20240229  # More powerful

# ============================================================
# Ollama Configuration (Local Models)
# ============================================================
# Uncomment and adjust if using Ollama
# OLLAMA_API_URL=http://ollama:11434/api  # For Docker
# OLLAMA_MODEL=mistral  # Change to any model you've pulled

# ============================================================
# Advanced Configuration
# ============================================================
# Memory System
MEMORY_EMBEDDINGS_MODEL=all-MiniLM-L6-v2
MEMORY_MAX_RESULTS=10

# Document Processing
MAX_DOCUMENT_SIZE_MB=10
EXTRACT_IMAGES=False

# Security
ENABLE_SIGNUP=True
RATE_LIMIT=60  # Requests per minute

DATABASE_PATH=/app/data/memories.db

# ============================================================
# Clerk Authentication (Required)
# ============================================================
# Get these from https://dashboard.clerk.com -> API Keys
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# ============================================================
# OpenRouter Configuration (Optional)
# ============================================================
# Get API key from https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-your_api_key_here